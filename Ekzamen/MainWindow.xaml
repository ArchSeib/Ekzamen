<Window x:Class="Ekzamen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ekzamen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Width="400" Height="40" Grid.Row="0" MaxLength="75" x:Name="Author"></TextBox>
        <TextBox Width="400" Height="40" Grid.Row="1" MaxLength="100" x:Name="Name"></TextBox>
        <xctk:MaskedTextBox Width="100" Height="40" Grid.Row="2" BorderBrush="Black" x:Name="Year" Mask="0000" Padding="0 8 0 0" MaxLength="4" TextAlignment="Center" CaretIndex="0">
        </xctk:MaskedTextBox>
    </Grid>
</Window>
